let mapleader=","

" instead of using control w + control j swith splits using just control j
nnoremap <C-J> <C-W><C-J>
nnoremap <C-K> <C-W><C-K>
nnoremap <C-L> <C-W><C-L>
nnoremap <C-H> <C-W><C-H>

" move one line at a time
nnoremap j gj
nnoremap k gk

" change escape key to normal mode
:imap uu <Esc>
noremap <Leader>q :q<CR>
noremap <Leader>x :x<CR>
noremap <Leader>w :w<CR>
noremap <Leader>s :so %<CR>
noremap <Leader>ws :w<CR>:so %<CR>

" disable arrows and mouse
map <Left> <nop>
map <Right> <nop>
map <Up> <nop>
map <Down> <nop>
noremap <ScrollWheelUp>      <nop>
noremap <S-ScrollWheelUp>    <nop>
noremap <C-ScrollWheelUp>    <nop>
noremap <ScrollWheelDown>    <nop>
noremap <S-ScrollWheelDown>  <nop>
noremap <C-ScrollWheelDown>  <nop>
" enter adds line break in normal mode
noremap <CR> i<CR><Esc>

" resource vim file
nmap <silent> <leader>ev :vsplit $MYVIMRC<CR>
nmap <silent> <leader>sv :so $MYVIMRC<CR>

" settings that can be toggled
nnoremap <Leader>h :set hlsearch!<CR>
nnoremap <Leader>p :set invpaste!<CR>
nnoremap <Leader>n :set relativenumber!<CR>


